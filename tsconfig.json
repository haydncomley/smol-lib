{
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "resolveJsonModule": true,
  }
  }